<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cohort Analysis Dashboard</title>
    <link href="/styles/style.css" rel="stylesheet">
</head>
<body>
    <div class="table-container">
        <h1>Bottle Cohort Analysis</h1>
        <table>
            <thead>
                <tr>
                    <th>Brand Name</th>
                    <% sortedUniqueMonths.forEach(month => { %>
                        <th><%= month %></th>
                    <% }); %>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% BrandMonthlyQuantities.forEach((monthData, brandName) => { %>
                    <tr>
                        <td><%= brandName %></td>
                        <% let total = 0; %>
                        <% sortedUniqueMonths.forEach(month => { %>
                            <% const quantity = monthData.get(month) || 0; %>
                            <% total += quantity; %>
                            <td style="text-align: right; padding-right: 0;"><%= quantity %></td>
                        <% }); %>
                        <td><%= total%></td>
                    </tr>
                <% }); %>
            </tbody>
            <tfoot>
                <tr>
                    <td >Total Quantity</td>
                    <% sortedUniqueMonths.forEach(month => { %>
                        <td>
                            <% const monthlyTotal = MonthlyTotals.get(month) || 0; %>
                            <%= monthlyTotal %>
                        </td>
                    <% }); %>
                    <td>
                        <% const grandTotal = Array.from(MonthlyTotals.values()).reduce((acc, val) => acc + (val || 0), 0); %>
                        <%= grandTotal %>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>
